<!DOCTYPE html>
<%= render '/refinery/html_tag' %>
  <head>
    <%= render partial: '/glass/head',        locals: {admin: true} %>
    <%= render partial: '/glass/stylesheets', locals: {admin: true} %>
  </head>
  <body class='login cms-ui <%= I18n.locale %>'>

    <%= render 'glass/browser_update' %>

    <div class="container">
      <div class="row">
        <div class="col-12 col-sm-6 offset-sm-3 col-lg-4 offset-lg-4">
          <div class="text-center mb-6">
            <h2>Refinery CMS</h2>
          </div>
          <%= render '/refinery/message' %>
          <%= yield %>
        </div>
      </div>
    </div>


    <%= render partial: '/glass/javascripts', locals: {admin: false} %>
    <%= render 'glass/browser_javascripts' %>

  </body>
</html>
