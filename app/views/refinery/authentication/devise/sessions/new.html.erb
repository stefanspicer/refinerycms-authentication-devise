<% content_for :header, t('.hello_please_sign_in') %>

<%= form_for resource, :as => resource_name,
                       :url => refinery.authentication_devise_user_session_path do |f| %>
  <div class='form-group'>
    <%= f.text_field :login, :placeholder => 'Email or full name', :class => 'form-control form-control-lg', 'autofocus' => 'autofocus' %>
  </div>
  <div class='form-group'>
    <%= f.password_field :password, :autocomplete => 'off', :placeholder => 'Password', :class => 'form-control form-control-lg' %>
  </div>

  <% if devise_mapping.rememberable? %>
  <div class='form-group'>
    <div class='checkbox'>
      <label for="refinery_user_remember_me">
        <%= f.check_box :remember_me %> <%= t('remember_me', :scope => 'devise.sessions') %>
      </label>
    </div>
  </div>
  <% end %>

  <div class="form-group">
    <%= render '/refinery/admin/form_actions', :f => f,
             :submit_button_text => t('.sign_in'),
             :before_delete_button => link_to(t('.forgot_password'), refinery.new_authentication_devise_user_password_path, :class => 'btn btn-link'),
             :hide_cancel => true %>
  </div>
<% end -%>
